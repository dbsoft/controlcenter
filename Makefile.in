# Control Center GTK Makefile

CC = @CC@
RM = @RM@
CP = @CP@
MAKE = @MAKE@
MKDIR = @MKDIR@
INSTALL = @INSTALL@

LIBS = @LIBS@
INCLUDES = @INCLUDES@

include Version
VER_REV=@MERCURIAL@

CFLAGS = @CFLAGS@ @ARCH@ -DVER_MAJ=$(VER_MAJ) -DVER_MIN=$(VER_MIN) -DVER_REV=$(VER_REV) -D__UNIX__ -DDW_RESOURCES
LDFLAGS = @LDFLAGS@ -ldwindows -ldwcompat

TARGET=cc
DISPLAYNAME=Control Center

OBJECTS = cc.o statsunx.o

SOURCES = cc.c statsunx.c

all: $(TARGET)

$(OBJECTS): $(SOURCES)
	$(CC) $(CFLAGS) $(INCLUDES) -c $<

resources.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c gtk/resources.c

statsunx.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c statsunx.c
        
$(TARGET):  $(OBJECTS) resources.o
	$(CC) $(CFLAGS) $(INCLUDES) -o $(TARGET) $(OBJECTS) resources.o $(LDFLAGS) $(LIBS)
	-mac/finishup.sh "$(DISPLAYNAME)" "$(TARGET)"
                
installer: $(TARGET)
	-chmod +x mac/installer.sh
	-mac/installer.sh "$(DISPLAYNAME)" "$(TARGET)"

clean: 
	$(RM) $(OBJECTS) resources.o $(TARGET)

distclean: 
	$(RM) $(OBJECTS) resources.o $(TARGET) *~ os2/*~ win/*~ gtk/*~ config.cache config.log config.status Makefile config.h

FORCE:

install: FORCE
	$(RM) -rf /usr/local/$(TARGET)
	$(MKDIR)  /usr/local/$(TARGET)
	$(CP) -f ../config/*.typ /usr/local/$(TARGET)
	$(INSTALL) $(TARGET) /usr/local/bin
        
resources.o: gtk/resources.c
cc.o: cc.c cc.h config.h
statsunx.o: statsunx.c
